            <tr>
                <td><p>Your surname :</p></td>
                <td><input type="text" name="Surname" /> </td>
            </tr>
            <tr>
                <td><input type="submit" value="Register myself" /> </td>
                <td></td>
            </tr>
        </table>
    }
</div>
@Html.Partial("CommonView")

